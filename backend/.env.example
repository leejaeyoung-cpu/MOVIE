# Environment
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./movie_reviews.db
# 프로덕션: DATABASE_URL=postgresql://user:password@localhost:5432/moviedb

# Redis (선택사항)
REDIS_URL=redis://localhost:6379
ENABLE_REDIS=false

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# AI/ML 설정 (토글)
# ==========================================

# GPU/CPU
ENABLE_GPU=true
GPU_DEVICE=0

# 모델 경량화
ENABLE_QUANTIZATION=true
QUANTIZATION_DTYPE=int8
QUANTIZATION_BACKEND=fbgemm

# 감성 분석
SENTIMENT_MODEL=ensemble
ENABLE_KNOWLEDGE_DISTILLATION=true
ENABLE_UNCERTAINTY_ESTIMATION=true

# Aspect-Based Sentiment
ENABLE_ABSA=true

# Multi-Emotion
ENABLE_EMOTION_CLASSIFICATION=true

# LLM (비용 발생 주의!)
ENABLE_LLM=false
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
LLM_MODEL=gpt-4-turbo-preview
USE_LLM_CACHE=true

# Explainable AI
ENABLE_XAI=true
XAI_METHOD=both

# ==========================================
# 추천 시스템
# ==========================================

RECOMMENDATION_MODEL=hybrid

# GNN (Graph Neural Networks)
ENABLE_GNN=true
GNN_TYPE=graphsage
GNN_HIDDEN_DIM=128
GNN_NUM_LAYERS=3

# Reinforcement Learning
ENABLE_RL=true
RL_ALGORITHM=contextual_bandit
RL_EPSILON=0.1

# Sequential Recommendation
ENABLE_SEQUENTIAL=true
SEQUENTIAL_MODEL=transformer

# Multi-Task Learning
ENABLE_MULTI_TASK=true

# ==========================================
# 성능 최적화
# ==========================================

# 배치 처리
ENABLE_DYNAMIC_BATCHING=true
MAX_BATCH_SIZE=32
BATCH_TIMEOUT_MS=100

# ONNX
ENABLE_ONNX=true
ONNX_OPTIMIZATION_LEVEL=all

# ==========================================
# 고급 ML 기법
# ==========================================

ENABLE_ACTIVE_LEARNING=true
ENABLE_DATA_AUGMENTATION=true
ENABLE_SEMI_SUPERVISED=true

# ==========================================
# MLOps
# ==========================================

ENABLE_AB_TESTING=true
ENABLE_MONITORING=true
ENABLE_DRIFT_DETECTION=true

# Sentry (에러 추적)
SENTRY_DSN=your-sentry-dsn-here

# MLflow (선택사항)
ENABLE_MLFLOW=false
MLFLOW_TRACKING_URI=http://localhost:5000
